#!/bin/sh
#
#= Evutils - Evpause
#
# Play / pause / stop media players. If multiple players are running then evmenu
# is used to select which player to control.
#
#
#== Synopsis
#
# evpause [options]
#
#
#== Options
#
# -s, --stop
#    Stop the player instead of pausing or playing.

   

. "$EVUTILS_HOME/lib/log"
. "$EVUTILS_HOME/lib/std"
. "$EVUTILS_HOME/lib/media"
. "$EVUTILS_HOME/lib/list"

_PLAY_ALL_OPT=" Play All"
_PAUSE_ALL_OPT=" Pause All"
_STOP_ALL_OPT=" Stop All"

_stop=1

_player_list=""
_player=""

# Set the player list.
#
_set_player_list() {
    players=$(get_running_players)

    if ! [ "$players" ]; then
        log_status "No running players. Exiting..."
        exit
    elif [ "$(list_len --list "$players")" -eq 1 ]; then
        _player=$players
        return
    fi

    IFS=$CHAR_NL
    for player in $players; do
        unset IFS
        metadata_title=$(playerctl --player="$player" metadata --format "{{title}}")
        _player_list=$(list_cat "$_player_list" "${player}${metadata_title:+ -- $metadata_title}")
    done

    if [ "$_stop" -eq 0 ]; then
        _player_list=$(list_cat "$_player_list" "$_STOP_ALL_OPT")
    else
        _player_list=$(list_cat "$_player_list" "$_PLAY_ALL_OPT")
        _player_list=$(list_cat "$_player_list" "$_PAUSE_ALL_OPT")
    fi

}

# Set the player to control.
#
_set_player() {
    if [ "$_player" ]; then
        return
    fi

    prompt=""

    if [ "$_stop" -eq 0 ]; then
        prompt=""
    else
        prompt=" "
    fi

    selection=""
    if ! { [ -t 0 ] || [ -p /dev/stdin ]; }; then
        selection=$(echo "$_player_list" | evmenu --gui --prompt "$prompt")
    else
        selection=$(echo "$_player_list" | evmenu --term --prompt "$prompt")
    fi
    if ! [ "$selection" ]; then
        exit
    fi
    _player=${selection%% -- *}
}

# Control the player.
#
_run() {
    echo "$_player"
    if [ "$_stop" -eq 0 ]; then
        case $_player in
            "$_STOP_ALL_OPT")
                player_stop
                ;;
            *)
                player_stop "$_player"
        esac
    else
        case $_player in
            "$_PLAY_ALL_OPT")
                player_play
                ;;
            "$_PAUSE_ALL_OPT")
                player_pause
                ;;
            *)
                player_toggle "$_player"
                ;;
        esac
    fi
}

main() {
    while [ "$1" ]; do
        case $1 in
            -s|--stop)
                _stop=0
                ;;
            -?*)
                log_warning "Unknown option ${1}. Ignoring..."
                ;;
        esac
        shift
    done

    _set_player_list
    _set_player
    _run
}

main "$@"

