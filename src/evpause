#!/bin/sh
#
#= Evutils - Evpause
#
# Play / pause / stop media players. If multiple players are running then evmenu
# is used to select which player to control.
#
#
#== Synopsis
#
# evpause [options]
#
#
#== Options
#
# -s, --stop
#    Stop the player instead of pausing or playing.

   

. "$EVUTILS_HOME/lib/log"
. "$EVUTILS_HOME/lib/media"
. "$EVUTILS_HOME/lib/list"

_PLAY_ALL_OPT=" Play All"
_PAUSE_ALL_OPT=" Pause All"
_STOP_ALL_OPT=" Stop All"

_stop=1

_player=""

# Set the player to control.
#
_set_player() {
    players=$(get_running_players)

    if ! [ "$players" ]; then
        log_status "No running players. Exiting..."
        exit
    fi

    if [ "$(list_len --list "$players")" -eq 1 ]; then
        _player=$players
        return
    fi

    prompt=""

    if [ "$_stop" -eq 0 ]; then
        players=$(list_cat "$players" "$_STOP_ALL_OPT")
        prompt=""
    else
        players=$(list_cat "$players" "$_PLAY_ALL_OPT")
        players=$(list_cat "$players" "$_PAUSE_ALL_OPT")
        prompt=" "
    fi

    if ! { [ -t 0 ] || [ -p /dev/stdin ]; }; then
        _player=$(echo "$players" | evmenu --gui --prompt "$prompt")
    else
        _player=$(echo "$players" | evmenu --term --prompt "$prompt")
    fi

    if ! [ "$_player" ]; then
        exit
    fi
}

# Control the player.
#
_run() {
    if [ "$_stop" -eq 0 ]; then
        case $_player in
            "$_STOP_ALL_OPT")
                player_stop
                ;;
            *)
                player_stop "$_player"
        esac
    else
        case $_player in
            "$_PLAY_ALL_OPT")
                player_play
                ;;
            "$_PAUSE_ALL_OPT")
                player_pause
                ;;
            *)
                player_toggle "$_player"
                ;;
        esac
    fi
}

main() {
    while [ "$1" ]; do
        case $1 in
            -s|--stop)
                _stop=0
                ;;
            -?*)
                log_warning "Unknown option ${1}. Ignoring..."
                ;;
        esac
        shift
    done

    _set_player
    _run
}

main "$@"

